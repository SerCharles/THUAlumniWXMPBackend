{
    "manifest_version": 2,
    "name": "cross-request",
    "description": "一个赋予html页面跨域请求能力的chrome扩展",
    "version": "1.3",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
     "permissions": [ "tabs", "storage", "webRequest", "webRequestBlocking", "*://*/*" ],
    "background": 
    {
      "scripts" : [
          "background.js"
          ]
    },
     "content_scripts": [{
          "matches": ["http://*/*", "https://*/*"],
        "js": [
            "response.js"
        ]
    }]
}